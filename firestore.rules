rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPERS ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthenticated() && getUserData().role == "ADMIN";
    }

    // --- GLOBAL DENY ---
    match /{document=**} {
      allow read, write: if false;
    }

    // --- 2. USERS COLLECTION ---
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      // Allow update if Admin OR if Owner (restricting sensitive fields like role/plan)
      allow update: if isAdmin() || (isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys()
          .hasAny(['role', 'subscriptionPlan', 'subscriptionStatus', 'uid', 'email']));
    }

    // --- 3. SIGNALS COLLECTION ---
    match /signals/{signalId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --- 4. TRADE JOURNAL ---
    match /tradeJournal/{entryId} {
      allow read, write: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid) && (request.resource == null || request.resource.data.userId == request.auth.uid);
    }

    // --- 5. EDUCATION CONTENT ---
    match /educationContent/{contentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --- 6. ANALYSIS HISTORY ---
    match /analysisHistory/{analysisId} {
      // Allow reading if the user is the owner
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      // Allow creation if the userId in the data matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow feedback updates for the owner
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['feedback']);
    }

    // --- 7. EDUCATION HISTORY ---
    match /educationHistory/{historyId} {
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // --- 8. TOKEN LEDGERS ---
    match /tokenTransactions/{txId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    // --- 9. FEEDBACK ---
    match /feedback/{feedbackId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
    }

    // --- 10. ADMIN SETTINGS ---
    match /systemConfig/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
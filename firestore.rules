
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPERS ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthenticated() && getUserData().role == "ADMIN";
    }

    // --- GLOBAL DENY ---
    match /{document=**} {
      allow read, write: if false;
    }

    // --- 2. USERS COLLECTION ---
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow initial creation of the user document
      allow create: if isOwner(userId);
      
      // Allow update if Admin OR if Owner (with restricted fields)
      allow update: if isAdmin() || (isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys()
          .hasAny(['role', 'subscriptionPlan', 'analysisTokens', 'educationTokens', 'subscriptionStatus']));
    }

    // --- 3. SIGNALS COLLECTION ---
    match /signals/{signalId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --- 4. TRADE JOURNAL ---
    match /tradeJournal/{entryId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // --- 5. EDUCATION CONTENT ---
    match /educationContent/{contentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --- 6 & 7. ANALYSIS & TOKEN LEDGERS ---
    // These should only be writable by Cloud Functions (server-side)
    match /analysisHistory/{analysisId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; 
    }

    match /tokenTransactions/{txId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    // --- 8. FEEDBACK ---
    match /feedback/{feedbackId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
    }

    // --- 9. ADMIN SETTINGS ---
    match /systemConfig/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /adminSettings/{settingId} {
      allow read, write: if isAdmin();
    }
  }
}
